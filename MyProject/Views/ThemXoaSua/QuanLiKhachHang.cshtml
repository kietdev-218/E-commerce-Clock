@{
    ViewBag.Title = "QuanLiKhachHang";
    Layout = "~/Views/Admin/LayoutAdmin.cshtml";
}
<style>
    td {
        vertical-align: middle !important;
    }
</style>
<div class="layout-page-customer">
    <h3 class="text-center mb-3 font-weight-bold" data-aos="flip-right">Danh sách khách hàng</h3>
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Mã KH</th>
                <th>Tên KH</th>
                <th>Tài khoản</th>
                <th>Mật khẩu</th>
                <th>SDT</th>
                <th>Địa chỉ</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.GetList) {
                <tr>
                    <td>@item.MaKH</td>
                    <td>@item.TenKH</td>
                    <td>@item.TaiKhoan</td>
                    <td>@item.MatKhau</td>
                    <td>@item.SoDienThoai</td>
                    <td>@item.DiaChi</td>
                    <td>@item.Email</td>
                    @*<td>@item.MaHD</td>
                    <td>
                        @if (item.TinhTrang == false) {
                            <span>Chưa hoàn thành</span>
                        }
                        else {
                            <span>Hoàn thành</span>
                        }
                    </td>*@

                    <td><button class="btn btn-danger btnXoaTK" data-makh="@item.MaKH">Xoá</button></td>
                </tr>
            }
        </tbody>
    </table>
    @{
        int temp2 = 0;
    }
    @foreach (var item in Model)
    {
        temp2++;
    }
    <h6 class=" pb-4 font-weight-bold">Tổng khách hàng: @temp2</h6>
</div>
