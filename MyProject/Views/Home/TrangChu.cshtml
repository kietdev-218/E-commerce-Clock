@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AK Watch</title>
    <link rel="short icon" href="~/Images/AK_brand.png" />
    <link rel="stylesheet" href="~/JS/bootstrap.min.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="~/JS/font.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/OwlCarousel2-2.3.4/dist/assets/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/OwlCarousel2-2.3.4/dist/assets/owl.theme.default.min.css" />
    <link rel="stylesheet" href="~/aos-library/aos.css" />
    <link href="~/Style.css" rel="stylesheet" />
</head>
<body>
    <style>
        .backToTop {
            position: fixed;
            bottom: 20px;
            right: 15px;
            opacity: 0;
            visibility: hidden;
            z-index: 1;
        }

            .backToTop img {
                width: 45px;
                height: 45px;
            }

        .cd-top--is-visible {
            visibility: visible;
            opacity: 1;
        }
    </style>
    <header class="header__navbar fixed-top">
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #000">
            <a class="navbar-brand" href="@Url.Action("TrangChu")">
                <img src="~/Images/AK_brand.png" /></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto d-flex justify-content-center align-items-center">
                    <li class="nav-item">
                        @Html.ActionLink("TRANG CHỦ", "TrangChu", "Home")
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("GIỚI THIỆU", "GioiThieu", "Home")
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("SẢN PHẨM", "SanPhamPartial", "SanPham")
                    </li>
                    @if (Session["taikhoan"] != null)
                    {
                        <li class="nav-item">
                            @Html.ActionLink("LỊCH SỬ MUA HÀNG", "LichSu", "User")
                        </li>
                        <li style="width: 200px;" class="text-right text-white position-relative login">
                            <span class="mr-2">Xin chào</span><span class="text-white" style="text-decoration: none; cursor: pointer">@Session["User"]</span>
                            <div class="optionLogin">
                                <a href="@Url.Action("DangXuat", "User")">Đăng xuất</a>
                            </div>
                        </li>
                    }
                    else {
                        <li class="nav-item position-relative login">
                            <span class="text-white font-weight-bold" style="text-decoration: none; cursor: pointer"><a href="@Url.Action("DangNhap", "User")">ĐĂNG NHẬP</a></span>
                            
                        </li>
                        <li class="nav-item position-relative login">
                            @Html.Action("Form", "Home")
                        </li>
                    }
                    <li class="nav-item lastLi text-center position-relative GH">
                        @Html.Action("GioHangPartial", "GioHang")
                        <ul class="gioHang">
                            <li class="nav-item">
                                @Html.Action("ViewGioHangHover", "GioHang")
                            </li>
                        </ul>
                    </li>
                </ul>

            </div>
        </nav>
    </header>
  
    <section class="content">
        <div class="banner" style="margin-top: 76px">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/Images/slider_1.png" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Images/slider_2.png" alt="Second slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <section class="categories container__custom py-5">
            <div class="row">
                <div class="col-md-6">
                    <div class="clothesForMen">
                        <div class="position-relative item" style="cursor: pointer">
                            <a href="@Url.Action("SanPhamPartial", "SanPham")">
                                <img src="~/Images/nam.jpg" class="w-100" />
                                <div class="details detailsForMen position-absolute">
                                    <h3>ĐỒNG HỒ NAM</h3>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="clothesForWomens">
                        <div class="position-relative item" style="cursor: pointer">
                            <a href="@Url.Action("SanPhamPartial", "SanPham")">
                                <img src="~/Images/nu.jpg" class="w-100" />
                                <div class="details detailsForWomen position-absolute">
                                    <h3>ĐỒNG HỒ NỮ</h3>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </section>
        @Html.Action("SanPham", "SanPham")
        
        <section class="about mb-5 text-white">
            <div class="about__content container__custom">
                <h3 class="py-5 font-weight-bold">Công ty</h3>
                <div class="about__details">
                    <h1>CÔNG TY SỐNG THEO CÁCH CỦA BẠN</h1>
                    <p class="py-3">Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry’s standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.</p>
                    <button class="btn btn-danger">HIỂU THÊM VỀ CHÚNG TÔI</button>
                </div>
            </div>
        </section>
    </section>
    <footer class="text-white">
        <div class="container__custom">
            <div class="row">
                <div class="col-md-3">
                    <img src="~/Images/AK_brand.png" style="width: 190px" />
                    <p>236B Lê Văn Sỹ ,Phường 1 ,Quận Tân Bình</p>
                    <p>Email: abcCompany@gmail.com</p>
                    <p>Điện thoại: 0123456789</p>
                    <i class="fab fa-facebook-f pr-4"></i>
                    <i class="fab fa-google-plus-g"></i>
                </div>
                <div class="col-md-3">
                    <h4>VỀ CHÚNG TÔI</h4>
                    <p>Tổng quan về công ty</p>
                    <p>Lịch sử hình thành</p>
                    <p>Tầm nhìn – Sứ mệnh</p>
                    <p>Câu chuyện thương hiệu</p>
                </div>
                <div class="col-md-3">
                    <h4>HỖ TRỢ KHÁCH HÀNG</h4>
                    <p>Phiếu quà tặng</p>
                    <p>Hướng dẫn chọn size</p>
                    <p>Thẻ VIP</p>
                </div>
                <div class="col-md-3">
                    <h4>ĐĂNG KÝ NHẬN BẢN TIN</h4>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Địa chỉ Email" aria-label="Recipient's username" aria-describedby="basic-addon2">
                        <div class="input-group-append">
                            <span class="input-group-text" id="basic-addon2">GỬI</span>
                        </div>
                    </div>
                    <p>Đăng ký với chúng tôi để nhận email về sản phẩm mới, khuyến mại đặc biệt và các sự kiện độc đáo.</p>
                </div>
            </div>
        </div>
    </footer>
    <div class="copyright text-center py-2 text-white">
        <p class="m-0">
            Copyright © AK Watch. All rights reserved.
        </p>
    </div>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document" style="min-width: 1150px">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Giỏ hàng của bạn</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @Html.Action("GioHang", "GioHang")
                </div>
                <div class="modal-footer">
                    <a href="@Url.Action("DatHang", "GioHang")" class="btn btn-outline-danger" id="datHang">Đặt hàng</a>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="popupLogin" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document" style="min-width: 990px">
            <div class="modal-content">
                <div class="modal-header" style="border-bottom: none">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body modalContentForm d-flex w-100 p-0">
                    <div class="modalLeft">
                        <h2>Tạo tài khoản</h2>
                        <p>
                            Tạo tài khoản để tiến hành đặt hàng, theo dõi đơn hàng, lưu danh sách sản phẩm yêu thích, nhận nhiều ưu đãi hấp dẫn
                        </p>
                        <img src="~/Images/vector.jpg" class="img-fluid mt-3" />
                    </div>
                    <div class="modalRight">
                        @Html.Action("DangKy", "User")
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a href="#" class="cd-top text-replace js-cd-top backToTop">
        <img src="~/Images/to-top.png" /></a>
    <script src="~/JS/jquery-3.5.1.min.js"></script>
    <script src="~/JS/popper.min.js"></script>
    <script src="~/JS/bootstrap.min.js"></script>
    <script src="~/JS/jquery.waypoints.js"></script>
    <script src="~/JS/jquery.countup.min.js"></script>
    <script src="~/JS/sweetalert2@10.js"></script>
    <script>
        $('.counter').countUp();
    </script>
    <script src="~/OwlCarousel2-2.3.4/dist/owl.carousel.min.js"></script>
    <script>
        $('.owl-carousel').owlCarousel({
            loop: true,
            margin: 10,
            nav: true,
            autoplay: true,
            autoplayHoverPause: true,
            autoplayTimeout: 3000,
            dots: false,
            responsive: {
                0: {
                    items: 1
                },
                600: {
                    items: 3
                },
                1000: {
                    items: 5
                }
            }
        })
    </script>
    <script src="~/aos-library/aos.js"></script>
    <script>
        AOS.init();
    </script>
    <script src="~/BackToTop/util.js"></script>
    <script src="~/BackToTop/main.js"></script>
    <script src="~/JS/jquery.validate.min.js"></script>
    <script src="~/JS/jquery.validate.unobtrusive.min.js"></script>
    <script>
        document.querySelector(".login").onclick = function () {
            document.querySelector(".optionLogin").classList.toggle("showOption");
        }
    </script>
    @if (TempData["ErrorUserName"] != null) {
        <script>
            window.onload = function () {
                Swal.fire({
                    title: 'Thông báo!',
                    text: '@Html.Raw(TempData["ErrorUserName"])',
                    icon: 'error',
                }).then(function (result) {
                    $("#popupLogin").modal("show");
                })
            }
        </script>
    }
</body>
</html>
